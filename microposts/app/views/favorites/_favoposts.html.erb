<ul class="media-list">
  <% favoposts.each do |favopost| %>
    <% user = favopost.user %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(current_user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to user.name, user_path(user) %> <span class="text-muted">posted at <%= favopost.created_at %></span>
        </div>
        <div>
          <p><%= favopost.content %></p>
        </div>
        <div>
          <%= render 'favorites/favo_button', micropost: favopost %>
          <% if current_user == favopost.user %>
            <%= link_to "Delete", favopost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate favoposts %>
</ul>